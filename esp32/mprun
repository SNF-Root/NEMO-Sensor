#!/bin/bash

# MicroPython device path
DEVICE="/dev/ttyUSB0"

# File to upload (defaults to main.py)
FILE="${1:-main.py}"

if [ ! -f "$FILE" ]; then
    echo "âŒ File '$FILE' not found in current directory."
    exit 1
fi

echo "ğŸ“¤ Uploading '$FILE' to MicroPython..."
mpremote connect $DEVICE fs cp "$FILE" :

echo "ğŸ” Rebooting device to run '$FILE'..."
mpremote connect $DEVICE soft-reset

# Optional: Open REPL afterward
echo "ğŸ’¬ Opening REPL. Press Ctrl+D again to soft-reset if needed."
mpremote connect $DEVICE repl
